<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_style" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font</item>
        <item name="android:textColor">@color/black</item>
    </style>



    <style name="input_style" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="button_register" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/font</item>
        <item name="android:textColor">@color/color_register</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>

    </style>
    <style name="button" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="theme_spinner">
        <item name="fontFamily">@font/font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>